{
  "rules": {
    "react/prop-types": 0 // to prevent prop type validation
  },
  "env": {
    "es6": true,
    "browser": true,
    "jest": true,
    "node": true // in order to allow global to work for express ie. path and fs
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "plugins": ["react"],
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
